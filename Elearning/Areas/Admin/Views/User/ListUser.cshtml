@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ListUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="/Assets/admin/js/controller/userController.js"></script>
    @*<script src="~/Assets/admin/js/controller/userControllerDelete.js"></script>*@
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        User
        <small>Control panel</small>
        <a href="/Admin/User/Index" class="btn btn-default">Thêm Mới</a>
    </h1>
    <br />
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">User Management</a></li>
        <li class="active">User List</li>
    </ol>
</section>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách người dùng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <!-- Form tìm kiếm cho User -->
                @using (Html.BeginForm("ListUser", "User", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder = "Nội dung tìm kiếm" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>User Name</th>
                                <th>Tên người dùng</th>
                                <th>Ngày tạo</th>
                                <th>Email</th>
                                <th>Trạng thái</th>
                                <th style="width: 100px;">Xóa user</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                 <!-- Đặt row_item.UserID để xoá User mỗi row sẽ có 1 ID -->
                                <tr id="row_@item.UserID">
                                    <td><a href="/Admin/User/Edit/@item.UserID">@item.UserName</a></td>
                                    <td>@item.Name</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.Email</td>
                                    <td><button type="button" class="btn btn-block btn-success btn-flat btn-active" id="btnTest" data-id1="@item.UserID">@(item.Status ? "Kích hoạt" : "Khóa")</button></td>
                                    @*<td><button type="button" class="btn btn-block btn-danger btn-sm" data-id2="@item.UserID">Xóa tài khoản</button></td>*@
                                    @*<td>
                                        <a href="/Admin/User/Edit/@item.UserID" class="btn btn-block btn-info btn-flat">Sửa</a>
                                    </td>*@

                                    <td>
                                        <button type="button" class="btn btn-default">
                                            @Ajax.ActionLink("Xoá User", "DeleteUser", new { @id = @item.UserID }, new AjaxOptions
                                       {
                                           Confirm = "Bạn chắc chắn muốn xoá user này?",
                                           OnComplete = "$('#row_" + @item.UserID + "').remove()",
                                           HttpMethod = "Delete"
                                       })
                                        </button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("ListUser", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>
<!-- /.row -->
