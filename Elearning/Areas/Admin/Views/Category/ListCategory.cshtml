@model PagedList.IPagedList<Model.ViewModel.CategoryView>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ListCategory";
    //Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    Layout = null;
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">

                <!-- Form tìm kiếm cho Category -->
                @using (Html.BeginForm("ListCategory", "Category", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Nhập tên chuyên mục" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Slug Title</th>
                                <th>Chuyên mục cha</th>
                                <th>Trạng thái</th>
                                <th style="width: 120px;">Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.CategoryID">
                                    <td><a href="/Admin/Category/EditCategory/@item.CategoryID"> @(item.ParentID == null ? "" : " --- ")@item.CategoryName </a></td>
                                    <td>@item.MetaTitle</td>
                                    <td>@item.CategoryNameParent</td>
                                    <td><button type="button" class="btn btn-block btn-warning btn-sm btn-active" data-idcategory="@item.CategoryID">@(item.Status.Value ? "Mở" : "Đóng")</button></td>
                                    <td>
                                        <button type="button" class="btn btn-default">
                                            @Ajax.ActionLink("Xoá category", "DeleteCategory", new { @id = @item.CategoryID }, new AjaxOptions
                                       {
                                           Confirm = "Bạn chắc chắn muốn xoá chuyên mục này?",
                                           OnComplete = "$('#row_" + @item.CategoryID + "').remove()",
                                           HttpMethod = "Delete"
                                       })
                                        </button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                    @Html.PagedListPager(Model, page => Url.Action("Create", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>
