@model PagedList.IPagedList<Model.EF.Money>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ListMoney";
    //Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="~/Assets/admin/js/controller/moneyControllerChangeStatus.js"></script>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Quản lý đơn vị tiền tệ
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <!-- Form tìm kiếm cho Section -->
                @using (Html.BeginForm("ListMoney", "Money", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Nội dung tìm kiếm" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Mô tả</th>
                                <th>Đơn vị</th>
                                <th>Quy đổi ra USD</th>
                                <th style="width: 90px;">Trạng thái</th>
                                <th style="width: 90px;">Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <!-- Đặt row_item.LectureID để xoá User mỗi row sẽ có 1 ID -->
                                <tr id="row_@item.MoneyID">
                                    <td><a href="/Admin/Money/Edit/@item.MoneyID"> @item.Name</a></td>
                                    <td>@item.Description</td>
                                    <td>@item.Unit</td>
                                    <td>@item.ExchangeUSD</td>
                                    <!-- Trong Class phải có btn-active truyền từ Script ChangeStatus-->
                                    <td><button type="button" class="btn btn-block btn-warning btn-active" data-idmoney="@item.MoneyID">@(item.Status.Value ? "Mở" : "Đóng")</button></td>

                                    <td>
                                        <button type="button" class="btn btn-default">
                                            @Ajax.ActionLink("Xoá", "DeleteMoney", new { @id = @item.MoneyID }, new AjaxOptions
                                       {
                                           Confirm = "Bạn chắc chắn muốn xoá đơn loại tiền này?",
                                           OnComplete = "$('#row_" + @item.MoneyID + "').remove()",
                                           HttpMethod = "Delete"
                                       })
                                        </button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("ListMoney", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>
<!-- /.row -->
