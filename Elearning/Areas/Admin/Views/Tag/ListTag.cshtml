@model PagedList.IPagedList<Model.EF.Tag>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ListTag";
    //Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách thẻ
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <!-- Form tìm kiếm cho User -->
                @using (Html.BeginForm("ListTag", "Tag", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Nhập tên thẻ" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên thẻ</th>
                                <th style="width: 100px;">Tuỳ chọn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.TagID">
                                    <td><a href="/Admin/Tag/EditTag/@item.TagID">@item.TagName</a></td>
                                    <td>
                                        <button type="button" class="btn btn-default">
                                            @Ajax.ActionLink("Xoá thẻ", "DeleteTag", new { @id = @item.TagID }, new AjaxOptions
                                       {
                                           Confirm = "Bạn chắc chắn muốn xoá thẻ này?",
                                           OnComplete = "$('#row_" + @item.TagID + "').remove()",
                                           HttpMethod = "Delete"
                                       })
                                        </button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Create", new { page, @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>
