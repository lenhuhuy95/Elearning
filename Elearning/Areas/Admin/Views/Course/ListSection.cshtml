@model PagedList.IPagedList<Model.EF.Section>
@using PagedList.Mvc;

@{
    ViewBag.Title = "ListSection";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section jsFooter{

    <script src="~/Assets/admin/js/controller/sectionControllerChangeStatus.js"></script>
    @*<script src="~/Assets/admin/js/controller/sectionControllerDelete.js"></script>*@
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Course
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Course</a></li>
        <li class="active">Course List</li>
        <li class="active">Course Section</li>
    </ol>
</section>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách chương
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <!-- Form tìm kiếm cho Section -->
                @using (Html.BeginForm("ListSection", "Course", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Nhập tên chương" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên section</th>
                                <th>Mô tả</th>
                                <th>Number Lecture</th>
                                <th style="width: 90px;">Trạng thái</th>
                                <th style="width: 110px;">Chỉnh sửa</th>
                                <th style="width: 110px;">Xóa chương</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <!-- Đặt row_item.SectionID để xoá User mỗi row sẽ có 1 ID -->
                                <tr id="row_@item.SectionID">
                                    <td><a href="/Admin/Course/EditSection/@item.SectionID"> @item.SectionName</a></td>
                                    <td>@item.Description</td>
                                    <td>@item.NumberLecture</td>
                                    <!-- Trong Class phải có btn-active truyền từ Script ChangeStatus-->
                                    <td><button type="button" class="btn btn-block btn-warning btn-sm btn-active" data-idsection1="@item.SectionID">@(item.Status.Value ? "Kích hoạt" : "Khóa")</button></td>
                                    @*<td><button type="button" class="btn btn-block btn-danger btn-sm" data-idsection2="@item.SectionID">Xóa Section</button></td>*@
                                    @*<td>
                                        <a href="/Admin/Course/EditSection/@item.SectionID" class="btn btn-block btn-info btn-flat">Chỉnh sửa nội dung Section</a>
                                    </td>*@
                                    <td>
                                        <a href="/Admin/Course/ListLecture/@item.SectionID" class="btn btn-block btn-info btn-flat">Chỉnh sửa Lecture</a>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-default">
                                            @Ajax.ActionLink("Xoá chương", "DeleteSection", new { @id = @item.SectionID }, new AjaxOptions
                                       {
                                           Confirm = "Bạn chắc chắn muốn xoá chương này?",
                                           OnComplete = "$('#row_" + @item.SectionID + "').remove()",
                                           HttpMethod = "Delete"
                                       })
                                        </button>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("ListSection", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>
<!-- /.row -->

<div class="col-lg-6">
    <div class="btn btn-default">
        @Html.ActionLink("Back to List", "ListCourses")
    </div>
</div>
