@model Elearning.Models.ListQuestion
@{
    ViewBag.Title = "SelectQuestion";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var listques = (List<Model.EF.Question>)ViewBag.ListQues;
    long examid = ViewBag.examid;
}

@{
    int dem = 1;
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="~/Assets/client/js/jquery-3.1.1.min.js"></script>
<script src="~/Assets/client/js/select2.min.js"></script>
<link href="~/Assets/client/css/select2.min.css" rel="stylesheet" />
<html>
<body>
    @using (Html.BeginForm("SelectQuestion", "Course", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <div role="form">
                            <div class="box-body">
                                <div class="form-group">

                                    @foreach (var item in listques)
                                    {
                                        @Html.HiddenFor(m => m.ListQuestionnn[dem - 1].ExamID, new { Value = examid })
                                        <div>
                                            <div>
                                                <label>
                                                    @Html.RadioButtonFor(m => m.ListQuestionnn[dem - 1].QuestionID, @item.QuestionID) <span>@item.Ques</span>
                                                </label>
                                            </div>
                                            <p>A - @item.Option1</p>
                                            <p>B - @item.Option2</p>
                                            <p>C - @item.Option3</p>
                                            <p>D - @item.Option4</p>
                                        </div>
                                        <br />
                                        dem++;
                                    }
                                </div>
                                <div class="form-group">
                                    <div style="text-align:center">
                                        <input type="submit" value="Lưu lại" onclick="GetId()" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
</body>
</html>


