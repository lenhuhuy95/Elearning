@model IList<Model.ViewModel.ScoreViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "ResultFile";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var submitFile = (List<Model.EF.SubmitFile>)ViewBag.SubmitFile;

    int dem = 0;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Course
        <small>Control panel</small>
        @*<a href="/Admin/Course/Create" class="btn btn-default">Thêm Mới</a>*@
    </h1>
    <br />
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Course</a></li>
        <li class="active">ResultFile List</li>
    </ol>
</section>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách kết quả
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <!-- Form tìm kiếm cho Course -->
                @using (Html.BeginForm("ResultFile", "Course", FormMethod.Post))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Nhập tên user" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Tên học viên</th>
                                    <th>Email</th>
                                    <th>Bài làm</th>
                                    <th>Cho điểm</th>
                                    @*<th>Lưu điểm</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr id="row_@Model[i].ID">
                                        <td>@Model[i].Name</td>
                                        @Html.HiddenFor(m => m[i].UserID, @Model[i].UserID)
                                        @Html.HiddenFor(m => m[i].ExamID, @Model[i].ExamID)
                                        @Html.HiddenFor(m => m[i].CourseID, @Model[i].CourseID)
                                        <td>@Model[i].Email</td>
                                        <td>
                                            @foreach (var item1 in submitFile)
                                            {
                                                if (Model[i].UserID == item1.UserID)
                                                {
                                                    <a href="~/File/@item1.NameFile">@item1.NameFile</a>
                                                    continue;
                                                }
                                            }
                                        </td>
                                        <td>
                                            @{
                                                int flag = 0;
                                            }
                                            @foreach (var item in ViewBag.listScoreUser)
                                            {
                                                if (item.UserID == Model[i].UserID)
                                                {
                                                    flag = 1;
                                                    @Html.TextBoxFor(m => m[i].ScoreOfExam, new { htmlAttributes = new { @class = "form-control" }, @Value = item.Score1 })
                                                    break;
                                                }
                                            }
                                            @if (flag == 0)
                                            {
                                                @Html.TextBoxFor(m => m[i].ScoreOfExam, new { htmlAttributes = new { @class = "form-control" }, @Value = "0" })
                                            }

                                        </td>

                                        @*<td>
                                                <button type="submit" value="Lưu điểm">Lưu điểm</button>
                                            </td>*@
                                    </tr>
                                    dem++;
                                }
                            </tbody>
                        </table>
                        <input type="text" hidden id="listscore" name="listScore" />
                        <button type="submit" onclick="GetId();">Lưu điểm</button>
                        @*@Html.PagedListPager(Model.Scoreee, page => Url.Action("ResultFile", new { page, @searchString = @ViewBag.SearchString }))*@
                    </div>
                }

                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>
<!-- /.row -->
<script>
    function GetId() {
        var extratitles = document.getElementsByName('additionaltitlename');
        var str = '';
        for (var i = 0; i < extratitles.length; i++) {
            str = str + '|' + extratitles.item(i).value;
        }
        $("#listscore").val($("#str").val())
    }
</script>
