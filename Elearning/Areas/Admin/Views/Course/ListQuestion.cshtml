@model PagedList.IPagedList<Model.EF.Question>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ListQuestion";
    var courseid = ViewBag.courseid;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Course
        <small>Control panel</small>
        @*<a href="/Admin/Course/CreateQuestion/@courseid" class="btn btn-default">Thêm Mới</a>*@
        <a href="/Admin/Course/TypeQuestion/@courseid" class="btn btn-default">Thêm Mới</a>
    </h1>
    <br />
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Course</a></li>
        <li class="active">Question List</li>
    </ol>
</section>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách câu hỏi
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <!-- Form tìm kiếm cho Course -->
                @using (Html.BeginForm("ListQuestion", "Course", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Nhập tên câu hỏi" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên câu hỏi</th>
                                <th>Ngày tạo</th>
                                <th>Ngày sửa</th>
                                <th>Loại câu hỏi</th>
                                <th style="width: 30px;">Tình trạng</th>
                                <th style="width: 30px;">Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <!-- Đặt row_item.CourseID để xoá User mỗi row sẽ có 1 ID -->
                                <tr id="row_@item.QuestionID">
                                    @*<td><a href="/Admin/Course/ListExams/@item.CourseID"> @item.ExamID</a></td>*@
                                    @if (item.Type.Trim() == "1")
                                    {
                                        <td><a href="/Admin/Course/EditQuestion/@item.QuestionID"> @item.Ques</a></td>
                                    }
                                    @if (item.Type.Trim() == "2")
                                    {
                                        <td><a href="/Admin/Course/EditMultipleQuestion/@item.QuestionID"> @item.Ques</a></td>
                                    }
                                    @if (item.Type.Trim() == "3")
                                    {
                                        <td><a href="/Admin/Course/EditTrueFalseQuestion/@item.QuestionID"> @item.Ques</a></td>
                                    }
                                    <td>@item.CreateDate</td>
                                    <td>@item.ModifiedDate</td>
                                    <td>@item.Type</td>
                                    <td><button type="button" class="btn btn-block btn-warning btn-flat btn-active" data-idquestion="@item.QuestionID">@(item.Status.Value ? "Kích hoạt" : "Khóa")</button></td>
                                    <td>
                                        <button type="button" class="btn btn-default">
                                            @Ajax.ActionLink("Xoá Question", "DeleteQuestion", new { @id = @item.QuestionID }, new AjaxOptions
                                       {
                                           Confirm = "Bạn chắc chắn muốn xoá câu hỏi này?",
                                           OnComplete = "$('#row_" + @item.QuestionID + "').remove()",
                                           HttpMethod = "Delete"
                                       })
                                        </button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("ListQuestion", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>
<!-- /.row -->

