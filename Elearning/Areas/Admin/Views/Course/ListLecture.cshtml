@model PagedList.IPagedList<Model.EF.Lecture>
@using PagedList.Mvc;

@{
    ViewBag.Title = "ListLecture";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script src="~/Assets/admin/js/controller/lectureControllerChangeStatus.js"></script>
    @*<script src="~/Assets/admin/js/controller/lectureControllerDelete.js"></script>*@
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Course
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Course</a></li>
        <li class="active">Course List</li>
        <li class="active">Course Lecture</li>
    </ol>
</section>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách bài học
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <!-- Form tìm kiếm cho Section -->
                @using (Html.BeginForm("ListLecture", "Course", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Nhập tên bài học" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên Lecture</th>
                                <th>Mô tả</th>
                                <th>CourseID</th>
                                <th style="width: 90px;">Trạng thái</th>
                                <th style="width: 110px;">Xóa bài học</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {                           
                                <!-- Đặt row_item.LectureID để xoá User mỗi row sẽ có 1 ID -->
                                <tr id="row_@item.LectureID">
                                    <td><a href="/Admin/Course/EditLecture/@item.LectureID"> @item.LectureName</a></td>
                                    <td>@item.Description</td>
                                    <td>@item.CourseID</td>
                                    <!-- Trong Class phải có btn-active truyền từ Script ChangeStatus-->
                                    <td><button type="button" class="btn btn-block btn-warning btn-active" data-idlecture1="@item.LectureID">@(item.Status.Value ? "Mở" : "Đóng")</button></td>
                                    @*<td><button type="button" class="btn btn-block btn-danger btn-sm" data-idlecture2="@item.LectureID">Xóa Lecture</button></td>*@
                                    @*<td>
                                        <a href="/Admin/Course/EditLecture/@item.LectureID" class="btn btn-block btn-info btn-flat">Chỉnh sửa nội dung Lecture</a>
                                    </td>*@
                                    <td>
                                        <button type="button" class="btn btn-default">
                                            @Ajax.ActionLink("Xoá bài học", "DeleteLecture", new { @id = @item.LectureID }, new AjaxOptions
                                       {
                                           Confirm = "Bạn chắc chắn muốn xoá chương này?",
                                           OnComplete = "$('#row_" + @item.LectureID + "').remove()",
                                           HttpMethod = "Delete"
                                       })
                                        </button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("ListLecture", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>
<!-- /.row -->

<div class="col-lg-6">
    <div class="btn btn-default">
        @foreach (var item in Model)
        {
            @Html.ActionLink("Back to List", "ListSection/" + @item.CourseID)
            break;
        }
    </div>
</div>
