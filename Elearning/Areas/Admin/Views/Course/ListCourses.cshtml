@model PagedList.IPagedList<Model.EF.Course>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ListCourses";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var Instructed = (List<Model.EF.Admin>)ViewBag.Instructed;
    var money = (List<Model.EF.Money>)ViewBag.money;
}
@section jsFooter{
    <script src="~/Assets/admin/js/controller/courseControllerChangeStatus.js"></script>
    @*<script src="~/Assets/admin/js/controller/courseControllerDelete.js"></script>*@
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Course
        <small>Control panel</small>
        <a href="/Admin/Course/Create" class="btn btn-default">Thêm Mới</a>
    </h1>
    <br />
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Course</a></li>
        <li class="active">Course List</li>
    </ol>
</section>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách khoá học
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <!-- Form tìm kiếm cho Course -->
                @using (Html.BeginForm("ListCourses", "Course", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Nhập tên khoá học" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên khoá học</th>
                                <th>Giảng viên</th>
                                <th>Giá</th>
                                <th>Đơn vị tiền</th>
                                <th>Number Section</th>
                                <th>Danh sách học viên</th>
                                <th style="width: 90px;">QL bài thi</th>
                                <th style="width: 90px;">QL câu hỏi</th>
                                <th style="width: 90px;">Trạng thái</th>
                                <th style="width: 110px;">Chỉnh sửa Section</th>
                                <th>Xóa khóa học</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <!-- Đặt row_item.CourseID để xoá User mỗi row sẽ có 1 ID -->
                                <tr id="row_@item.CourseID">
                                    <td><a href="/Admin/Course/EditCourse/@item.CourseID"> @item.CourseName</a></td>
                                    <td>
                                        @foreach (var item2 in Instructed)
                                        {
                                            if (item.Instructed == item2.AdminID)
                                            {
                                                @item2.NameAdmin
                                            }
                                            continue;
                                        }
                                    </td>                      
                                    <td>@item.Cost</td>
                                    @foreach (var item2 in money)
                                    {
                                        if (item.MoneyID == item2.MoneyID)
                                        {
                                            <td>@item2.Unit</td>
                                            continue;
                                        }
                                    }
                                    <td>@item.NumberSection</td>
                                    <td>
                                        <a href="/Admin/Course/ListUserCourses/@item.CourseID" class="btn btn-block btn-info btn-flat">DS học viên</a>
                                    </td>
                                    <td><a href="/Admin/Course/ListExams/@item.CourseID">Chi tiết >></a></td>
                                    <td><a href="/Admin/Course/ListQuestion/@item.CourseID">Chi tiết >></a></td>
                                    <!-- Trong Class phải có btn-active truyền từ Script ChangeStatus-->
                                    <td><button type="button" class="btn btn-block btn-warning btn-sm btn-active" data-idcourse1="@item.CourseID">@(item.Status.Value ? "Kích hoạt" : "Khóa")</button></td>
                                    @*<td><button type="button" class="btn btn-block btn-danger btn-sm" data-idcourse2="@item.CourseID">Xóa khóa học</button></td>*@
                                    @*<td>
                                        <a href="/Admin/Course/EditCourse/@item.CourseID" class="btn btn-block btn-info btn-flat">Chỉnh sửa khoá học</a>
                                    </td>*@
                                    <td>
                                        <a href="/Admin/Course/ListSection/@item.CourseID" class="btn btn-block btn-info btn-flat">Chỉnh sửa Section</a>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-default">
                                            @Ajax.ActionLink("Xoá", "DeleteCourse", new { @id = @item.CourseID }, new AjaxOptions
                                       {
                                           Confirm = "Bạn chắc chắn muốn xoá khoá học này?",
                                           OnComplete = "$('#row_" + @item.CourseID + "').remove()",
                                           HttpMethod = "Delete"
                                       })
                                        </button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("ListCourses", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>
<!-- /.row -->
