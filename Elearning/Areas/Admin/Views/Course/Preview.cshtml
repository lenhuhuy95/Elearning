@model Model.EF.Exam
@{
    ViewBag.Title = "Preview";
    var listques = (List<Model.EF.Question>)ViewBag.ListQues;
    var ListQuesSelect = (List<Model.EF.ExamQuestion>)ViewBag.ListQuesSelect;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int dem = 1;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        <h2>@Model.Name</h2>
    </h1>
    <br />
</section>

<body>

    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">

                <div>
                    @foreach (var ques in listques)
            {
                foreach (var queselect in ListQuesSelect)
                {
                    if (ques.QuestionID == queselect.QuestionID)
                    {
                                <p><strong>Câu @dem: @ques.Ques</strong></p>
                                <form>
                                    <div class="radio">
                                        <label><input type="radio" name="optradio">A: @ques.Option1</label>
                                    </div>
                                    <div class="radio">
                                        <label><input type="radio" name="optradio">B: @ques.Option2</label>
                                    </div>
                                    <div class="radio">
                                        <label><input type="radio" name="optradio">C: @ques.Option3</label>
                                    </div>
                                    <div class="radio">
                                        <label><input type="radio" name="optradio">D: @ques.Option4</label>
                                    </div>
                                </form>
                                <br />
                                dem++;
                            }
                        }
                    }
                </div>
                <br />
            </div>
        </div>
    </div>
</body>