
@model PagedList.IPagedList<Model.EF.AdminGroup>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ListAdminGroup";
    //Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">           
            <!-- /.panel-heading -->
            <div class="panel-body">

                <!-- Form tìm kiếm cho Section -->
                @using (Html.BeginForm("ListAdminGroup", "UserAdmin", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Nội dung tìm kiếm" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên nhóm quyền</th>
                                <th>Tên hiện thị</th>
                                <th>Nội dung quyền</th>
                                @*<th style="width: 70px;">Xóa</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <!-- Đặt row_item.LectureID để xoá User mỗi row sẽ có 1 ID -->
                                <tr id="row_@item.ID">
                                    <td><a href="/Admin/UserAdmin/EditGroupRole/@item.ID">@item.ID</a></td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    @*<td>
                                        <button type="button" class="btn btn-default">
                                            @Ajax.ActionLink("Xoá", "DeleteAdminGroup", new { @id = @item.ID }, new AjaxOptions
                                       {
                                           Confirm = "Bạn chắc chắn muốn xoá nhóm quyền này?",
                                           OnComplete = "$('#row_" + @item.ID + "').remove()",
                                           HttpMethod = "Delete"
                                       })
                                        </button>
                                    </td>*@
                                </tr>
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("ListAdminGroup", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>
<!-- /.row -->

