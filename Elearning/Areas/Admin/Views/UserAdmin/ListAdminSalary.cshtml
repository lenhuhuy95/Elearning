@model PagedList.IPagedList<Model.EF.Admin>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ListAdminSalary";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script src="~/Assets/admin/js/controller/userAdminControllerChangeStatus.js"></script>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Admin
        <small>Control panel</small>
    </h1>
    <br />
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Admin Management</a></li>
        <li class="active">Salary</li>
    </ol>
</section>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Danh sách admin salary</h4>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <!-- Form tìm kiếm cho Course -->
                @using (Html.BeginForm("ListAdminSalary", "UserAdmin", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Nhập tên đăng nhập" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên đăng nhập</th>
                                <th>Tên admin</th>
                                <th>Quyền</th>
                                <th>Tài khoản</th>
                                <th style="width: 130px;">Chi tiết</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <!-- Đặt row_item.CourseID để xoá User mỗi row sẽ có 1 ID -->
                                <tr id="row_@item.AdminID">
                                    <td><a href="/Admin/UserAdmin/Detail/@item.AdminID"> @item.UserAdmin</a></td>
                                    <td>@item.NameAdmin </td>
                                    <td>@item.Role </td>
                                    <td></td>                              
                                    <td><a href="/Admin/UserAdmin/Detail/@item.AdminID" class="btn btn-block btn-success btn-flat">Chi tiết tài khoản</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("ListAdminSalary", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>
<!-- /.row -->
