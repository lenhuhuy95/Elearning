@model PagedList.IPagedList<Model.EF.Admin>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ListAdmin";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">

                <!-- Form tìm kiếm cho Course -->
                @using (Html.BeginForm("ListAdmin", "UserAdmin", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Nhập tên admin" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên đăng nhập</th>
                                <th>Tên admin</th>
                                <th>Quyền</th>
                                <th>Trạng thái</th>
                                <th style="width: 55px;">Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <!-- Đặt row_item.CourseID để xoá User mỗi row sẽ có 1 ID -->
                                <tr id="row_@item.AdminID">
                                    <td><a href="/Admin/UserAdmin/Edit/@item.AdminID"> @item.UserAdmin</a></td>
                                    <td>@item.NameAdmin </td>
                                    <td>@item.GroupID </td>
                                    <!-- Trong Class phải có btn-active truyền từ Script ChangeStatus-->
                                    <td><button type="button" class="btn btn-block btn-warning btn-sm btn-active" data-adminid="@item.AdminID">@(item.Status.Value ? "Kích hoạt" : "Khóa")</button></td>
                                    <td>
                                        <button type="button" class="btn btn-default">
                                            @Ajax.ActionLink("Xoá", "DeleteAdmin", new { @id = @item.AdminID }, new AjaxOptions
                                       {
                                           Confirm = "Bạn chắc chắn muốn xoá admin này?",
                                           OnComplete = "$('#row_" + @item.AdminID + "').remove()",
                                           HttpMethod = "Delete"
                                       })
                                        </button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("ListAdmin", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>
<!-- /.row -->
