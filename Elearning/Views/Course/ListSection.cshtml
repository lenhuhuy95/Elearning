@model PagedList.IPagedList<Model.EF.Section>
@using PagedList.Mvc;
@{
    Layout = null;
}

<table class="table table-hover">
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td class="bg-info" colspan="3"><strong>@item.SectionName</strong></td>
                @{ Html.RenderAction("ListLecture", "Course", new { sectionID = @item.SectionID });} <!-- Gọi (Show) dữ liệu từ trang View ListLecture -->
            </tr>
                    }
    </tbody>
</table>